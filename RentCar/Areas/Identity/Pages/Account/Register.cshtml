@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.tel"></label>
                <input asp-for="Input.tel" class="form-control" />
                <span asp-validation-for="Input.tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.adresse"></label>
                <input asp-for="Input.adresse" class="form-control" />
                <span asp-validation-for="Input.adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.cin"></label>
                <input asp-for="Input.cin" class="form-control" />
                <span asp-validation-for="Input.cin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.isAdmin"></label>
                <input type="radio" asp-for="Input.isAdmin" value="true" name="type" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.isCustomer"></label>
                <input type="radio" asp-for="Input.isCustomer" value="false" name="type" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.isProprietaire"></label>
                <input type="radio" asp-for="Input.isProprietaire" value="false" name="type" class="form-control" />
            </div>
            <button type="submit" class="btn btn-info">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
