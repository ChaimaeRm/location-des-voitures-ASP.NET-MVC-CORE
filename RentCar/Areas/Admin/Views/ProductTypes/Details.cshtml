@model RentCar.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}
<br />

<h2> Marque Details</h2>
<br /><br />
<form asp-action="Details" methode="post">
    <div class="p-4 rounded boder">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ProductType"  readonly ="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
            <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary">Back To List</a>
            
        </div>

    </div>
</form>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 
