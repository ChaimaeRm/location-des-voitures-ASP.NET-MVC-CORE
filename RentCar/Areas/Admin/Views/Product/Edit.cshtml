@model RentCar.Models.Products

<br />
<h2 class="text-info">Edit Product</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class=" row table-bordered " style="padding:15px 15px 15px 15px">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-8">


                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Matricule"></label>
                </div>
                <div class="col-md-8">


                    <input asp-for="Matricule" class="form-control" />
                </div>
                <span asp-validation-for="Matricule" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Kilometrage"></label>
                </div>
                <div class="col-md-8">


                    <input asp-for="Kilometrage" class="form-control" />
                </div>
                <span asp-validation-for="Kilometrage" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="annee"></label>
                </div>
                <div class="col-md-8">


                    <input asp-for="annee" class="form-control" />
                </div>
                <span asp-validation-for="annee" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Image" class="form-control" type="file" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="ProductColor" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>
                    @*<input asp-for="ProductTypeId" class="form-control"/>*@
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>
                    @*<input asp-for="SpecialTagId" class="form-control" />*@
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="ProprietaireId"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="ProprietaireId" asp-items="ViewBag.ProprietaireId" class="form-control"></select>
                    @*<input asp-for="SpecialTagId" class="form-control" />*@
                </div>
                <span asp-validation-for="ProprietaireId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="IsAvailable" class="" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            <img src="~/images/@Model.Image" style="width:100%" />
        </div>

    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
