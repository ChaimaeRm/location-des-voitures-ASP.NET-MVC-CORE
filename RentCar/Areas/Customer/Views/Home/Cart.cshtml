@using RentCar.Models
@model List<Products>

@{
    ViewData["Title"] = "Cart";
}

<h2>Your Cart</h2>

<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.Image" style="width: 200px; height:150px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>
                        <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                            <span class="glyphicon glyphicon-trash" ></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-lg-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success"  > Back To List</a>
    </div>
    <div class="col-lg-6 text-center">
        <h4> Total Amount : </h4>
        <h4> Grant Total : @Model.Sum(c=>c.Price)</h4>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-success"> Process To Checkout</a>
    </div>
</div>

